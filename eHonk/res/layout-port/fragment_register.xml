<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:weightSum="50" >

        <TextView
            android:id="@+id/textView_register_menu"
            style="@style/eHonkTextStyle1"
            android:layout_marginBottom="100dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_menu" />
        
        <EditText
            android:id="@+id/editText_license_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:layout_gravity="center_horizontal"
            android:hint="@string/license_plate_hint"
            android:inputType="textCapWords"
            android:maxEms="15" >
            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button_register"
            style="@style/eHonkButtonStyle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/register_button" />

        <TextView
            android:id="@+id/textView_not_now"
            style="@style/eHonkTextStyle1"
            android:layout_marginTop="120dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_now" />
        
        <TextView
            android:id="@+id/textView_I_no_driver"
            style="@style/eHonkTextStyle3"
            android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/I_no_driver" />
        
</LinearLayout>
